<div class="widget">
  <div class="widget-inner">
    <a class="widget-link" href="#">
      <i class="fa fa-plus"></i>
    </a>
    <div class="widget-tooltip">
      <%= link_to "회원가입", new_registration_path(resource_name), class: 'signup_link' %>
      <!--link_to "비밀번호 찾기", new_password_path(resource_name), class: 'forgotpw_link-->
    </div>
  </div>
</div>
<div class="widget-cover"></div>
<script>
  $('.widget').on('click', '.widget-link', function (e) {
    e.preventDefault();
    $('.widget-link').toggleClass('rotate-icon').toggleClass('icon-color');
    $('.widget-tooltip').toggle();
    $('.widget-cover').toggle();
  });
</script>