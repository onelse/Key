  <div class="account_wrap">
    <%= render 'nav' %>
  <h1 class="index_title">Password</h1>
  <table class="index_table">
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td class= 'index_td' rowspan="2"><%= account.keyname%></td>
          <td>ID</td>
          <td><%= account.keyid %></td>
          <td rowspan="2"><%= link_to 'Edit', edit_account_path(account) %>
           <%= link_to 'Delete', account, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' } %></td>
        </tr>
        <tr>
          <td>Password</td>
          <td><%= account.keypw %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'Add Password', new_account_path, class: 'new_account_button' %>
      </div>
  </body>
