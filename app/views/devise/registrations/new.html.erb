<div class="signup-form">
  <div class="signup-inner">
    <div class="signup-content">
      <h2 class="signup-title">keys</h2>
      <div class="signup_form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
          <div class="form-inputs">
            <%= f.input :name, placeholder: "이름",
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "name" }%>
            <%= f.input :email, placeholder: "이메일",
                        required: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password, placeholder: "비밀번호",
                        required: true,
                        hint: ("#{@minimum_password_length}자 이상 입력해주세요." if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation, placeholder: "비밀번호 확인",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
        
          <div class="form-actions">
            <%= f.button :submit, "가입하기" %>
          </div>
        <% end %>
      </div>
      <a class="signin_link" href="/users/sign_in"><i class="fa fa-arrow-left"></i></a>
    </div>
  </div>
</div>
